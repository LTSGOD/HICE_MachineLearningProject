import os

# image_datas ê°’ ['C:\\Users\\82104\\OneDrive\\mushroom\\a.jpg', 'C:\\Users\\82104\\OneDrive\\mushroom\\ce (105).jpg']
image_datas = glob("C:\\Users\\82104\\OneDrive\\mushroom\\*.jpg")
class_name = ["na", "nu"]
dic = {"na": 0, "nu": 1}

X = []
Y = []
for imagename in image_datas:
    image = Image.open(imagename)
    print(image)
    image = image.resize((128, 128))
    image = image.convert('RGB')
    image.save("mushfoomsave", "png")
    #image = np.array(image)

    X.append(image)

